<svg
  width="{{ width }}"
  height="{{ height }}"
  viewBox="0 0 {{ width }} {{ height }}"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  aria-labelledby="cardTitle"
  role="img"
>
  <title id="cardTitle">Now playing on Spotify</title>
  <foreignObject width="{{ width }}" height="{{ height }}">
    <defs>
      <style type="text/css">
        <![CDATA[
            @import url('https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600&display=swap');
        ]]>
      </style>
    </defs>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .container {
        font-family: 'Geist', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
        background-color: {{ bg_color }};
        width: 100%;
        height: 100%;
        border-radius: 12px;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .status-text {
        color: {{ status_color }};
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.3px;
        text-transform: uppercase;
        margin-bottom: 4px;
      }

      .content-wrapper {
        display: flex;
        align-items: flex-start;
        gap: 14px;
        flex: 1;
      }

      .cover-wrapper {
        flex-shrink: 0;
      }

      .cover-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
        display: block;
      }

      .text-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 6px;
        min-width: 0;
      }

      .song-title {
        font-size: 15px;
        font-weight: 600;
        color: {{ text_color }};
        line-height: 1.4;
        display: flex;
        align-items: center;
        gap: 6px;
        min-width: 0;
        overflow: hidden;
      }

      .song-title-text {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        flex: 1;
        min-width: 0;
        position: relative;
      }

      .artist-name {
        font-size: 13px;
        font-weight: 400;
        color: {{ status_color }};
        line-height: 1.4;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        position: relative;
      }

      .explicit-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: {{ text_color }};
        color: {{ bg_color }};
        font-size: 9px;
        font-weight: 600;
        border-radius: 3px;
        padding: 2px 5px;
        line-height: 1;
        letter-spacing: 0.2px;
      }

      .audio-visualizer {
        display: flex;
        align-items: flex-end;
        gap: 3px;
        height: 20px;
        margin-top: 4px;
        padding-left: 2px;
      }

      .bar {
        background: {{ accent_color }};
        width: 3px;
        border-radius: 2px;
        height: 4px;
        animation: sound 0ms -800ms linear infinite alternate;
      }

      @keyframes sound {
        0% {
          opacity: 0.4;
          height: 4px;
        }
        100% {
          opacity: 1;
          height: 16px;
        }
      }

      {{css_bar|safe}}

      .no-cover .text-content {
        padding-left: 0;
      }
    </style>

    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <div class="status-text">{{status}}</div>

      {% if is_now_playing %}
      <div class="content-wrapper {% if not needs_cover_image %}no-cover{% endif %}">
        {% if needs_cover_image and img %}
        <div class="cover-wrapper">
          <img
            src="data:image/png;base64, {{img}}"
            alt="Album cover"
            class="cover-image"
          />
        </div>
        {% endif %}

        <div class="text-content">
          <div class="song-title">
            {% if explicit %}
            <span class="explicit-badge">E</span>
            {% endif %}
            <span class="song-title-text">{{song_name}}</span>
          </div>
          <div class="artist-name">{{artist_name}}</div>
          {% if content_bar %}
          <div class="audio-visualizer">{{content_bar|safe}}</div>
          {% endif %}
        </div>
      </div>
      {% else %}
      <div class="content-wrapper {% if not needs_cover_image %}no-cover{% endif %}">
        {% if needs_cover_image and img %}
        <div class="cover-wrapper">
          <img
            src="data:image/png;base64, {{img}}"
            alt="Album cover"
            class="cover-image"
          />
        </div>
        {% endif %}

        <div class="text-content">
          <div class="song-title">
            {% if explicit %}
            <span class="explicit-badge">E</span>
            {% endif %}
            <span class="song-title-text">{{song_name}}</span>
          </div>
          <div class="artist-name">{{artist_name}}</div>
        </div>
      </div>
      {% endif %}
    </div>
  </foreignObject>
</svg>
