<svg width="350" height="{{height}}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-labelledby="cardTitle" role="img">
  <title id="cardTitle">Now playing on Spotify</title>
  <foreignObject width="320" height="{{height}}">
    <defs>
        <style type="text/css">
            <![CDATA[
                @font-face {
                    font-family: 'Poppins';
                    font-style: normal;
                    font-weight: 400;
                    src: url(https://fonts.gstatic.com/s/poppins/v15/pxiEyp8kv8JHgFVrJJfecg.woff2) format('woff2');
                    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
                }
            ]]>
        </style>
    </defs>

    <style>
      .main {
          margin-top: 15px;
          display: flex;
      }
      .currentStatus {
          font-size: 12px;
          position: static;
          margin-top: -1px;
          margin-left: 3px;
      }
      div {
          font-family: 'Poppins', -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      }
      .container {
          display: flex;
          align-items: center;
          border-radius: 10px;
          padding: 10px 10px;
      }
      .cover-link {
          height: 64px;
      }
      .cover {
          border-radius: 1px;
          margin-right: 10px;
      }
      .playing {
          display: flex;
          justify-content: center;
          align-items: center;
          color: #53b14f;
          font-weight: bold;
          text-align: center;
          margin-bottom: 8px;
      }
      .not-play {
          color: #00bebe;
          text-align: center;
          margin-bottom: 0;
      }
      .artist {
          color: #121212;
          font-weight: 500;
          font-size: 14px;
          margin-bottom: 20px;
      }
      .song {
          color: #212122;
          font-size: 14px;
          margin-bottom: 10px;
      }
      #bars {
          position: absolute;
          height: 6px;
          width: 220px;
          overflow: hidden;
          margin: -6px 0 0 0px;
      }
      .bar {
          background: #53b14f;
          bottom: 1px;
          height: 3px;
          position: absolute;
          width: 3px;
          animation: sound 0ms -800ms linear infinite alternate;
      }

      .explicit-music {
        background-color: #2C2F33;
        font-size: 10px;
        color: white;
        border-radius: 5px;
        vertical-align: baseline;
        padding: 1px 3px 1px 3px;
        margin-top: 0;
        margin-left: 3px;
      }

      @keyframes sound {
          0% {
            opacity: .35;
            height: 3px;
          }
          100% {
            opacity: 1;
            height: 6px;
          }
      }

      {{css_bar|safe}}
    </style>

      <div xmlns="http://www.w3.org/1999/xhtml" class="container">
        {% if is_now_playing %}
            <div class="main">
                {% if needs_cover_image %}
                  <a class="cover-link">
                    <center>
                       <img src="data:image/png;base64, {{img}}" width="75" height="75" class="cover" />
                    </center>
                  </a>
                {% endif %}
                <div class="text-container">
                    <div class="song">
                        {% if explicit %}
                            <span class="explicit-music">E</span>
                        {% endif %}
                        {{song_name}}
                    </div>
                    <div class="artist">{{artist_name}}</div>
                    <div id='bars'>{{content_bar|safe}}</div>
                </div>
            </div>
        {% else %}
            <div class="main">
                  {% if needs_cover_image %}
                      <a target="_BLANK" class="cover-link">
                        <center>
                           <img src="data:image/gif;base64,R0lGODlhAQABAPAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" width="60" height="60" />
                        </center>
                      </a>
                  {% endif %}
                <div class="playing not-play">Nothing playing on Spotify</div>
            </div>
        {% endif %}
    </div>
  </foreignObject>
</svg>
