<svg
  width="{{ width }}"
  height="{{ height }}"
  viewBox="0 0 {{ width }} {{ height }}"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-labelledby="card-title"
  role="img"
>
  <title id="card-title">Now playing on Spotify</title>
  <foreignObject width="{{ width }}" height="{{ height }}">
      {% include 'partial/svg-font.html.j2' %}

      <style type="text/css">
        <!-- Basic styling -->
        div {
          font-family: 'Poppins', -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
          background-color: {{ colors.background | safe }};
        }

        .main {
          color: {{ colors.text | safe }};
          /** margin-top: 40px; **/
          display: flex;
          padding: 10px;
        }

        .container {
          border-radius: 5px;
          padding: 10px 10px 10px 0px;
        }

        .current-status {
          color: {{ colors.title | safe }};
          font-size: 18px;
          position: static;
          margin-left: 10px;
        }

        <!-- Song-related styling -->
        .art {
          width: 25%;
          /*float: left;
          margin-left: -5px; */
          display: flex;
          align-items: content;
          justify-content: center;
          height: 100%;
        }

        .content {
          width: 71%;
        }

        .song {
          overflow: hidden;
          margin-top: 4px;
          font-size: 20px;
          text-align: center;
          white-space: nowrap;
          text-overflow: ellipsis;
          margin-left: 2px;
          font-weight: 800;
        }

        .artist {
          font-size: 17px;
          margin-top: 4px;
          text-align: center;
          margin-bottom: 5px;
          margin-left: 2px;
        }

        .cover {
          width: 100px;
          height: 100px;
          border-radius: 5px;
        }

        .explicit-music {
          background-color: {{ colors.text | safe }};
          color: {{ colors.background | safe }};
          font-size: 12px;
          border-radius: 5px;
          vertical-align: baseline;
          padding: 1px 4px 1px 4px;
          margin-left: 3px;
        }

        .song-container {
          overflow: hidden;
          white-space: nowrap;
        }

        <!-- Display long text as scrolling -->
        .scrolling {
          animation: marquee 10s linear infinite;
          display: inline-block;
          padding-right: 20px;
        }

        <!-- Bars styling -->
        #bars {
          width: 70%;
          height: 30px;
          position: absolute;
          display: flex;
          align-items: flex-end;
          overflow: hidden;
        }

        .bar {
          width: 3px;
          bottom: 1px;
          height: 3px;
          position: absolute;
          background: #1DB954;
          animation: sound 0ms -800ms linear infinite alternate;
        }

        <!-- Animations -->
        @keyframes sound {
          0% {
            height: 3px;
            opacity: .35;
          }
          100% {
            height: 15px;
            opacity: 0.95;
          }
        }
        @keyframes marquee {
          0% {
            transform: translateX(100%);
          }
          100% {
            transform: translateX(-100%);
          }
        }

        <!-- Display the CSS bar -->
        {{ css_bar | safe }}
      </style>

    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <!-- Display the status if enabled -->
      {% if not hide_status %}
        <div class="current-status">{{ status }}</div>
      {% endif %}

      <div class="main">
        {% if display_cover %}
        <a class="art">
          <center>
            <img src="data:image/png;base64, {{ song.image }}" class="cover" />
          </center>
        </a>
        {% endif %}

        <div class="content">
          <!-- Display song name based on the length -->
          <div class="song-container">
            {% if show_animation %}
              <div class="song scrolling">{{ song.name }}</div>
            {% else %}
              <div class="song">{{ song.name }}</div>
            {% endif %}
          </div>

          <!-- Display artist info -->
          <div class="artist">
            {% if song.is_explicit %}
              <span class="explicit-music">E</span>
            {% endif %}

            {{ song.artist }}
          </div>

          <div id="bars">{{ content_bar | safe }}</div>
        </div>
      </div>
    </div>
  </foreignObject>
</svg>
