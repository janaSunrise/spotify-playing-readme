<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Spotify playing README</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        #readme {
            height: 120px;
            width: 400px;
            padding: 5px;
        }
    </style>

  </head>
  <body>
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
      <div class="container is-max-desktop">
          <div class="navbar-brand">
            <p class="navbar-item">
                <strong>Spotify playing README</strong>
            </p>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
            </a>
          </div>

           <div class="navbar-end">
               <a class="navbar-item" href="https://github.com/janaSunrise/spotify-playing-readme">
                   GITHUB
               </a>
           </div>
        </div>
    </nav>

    <div class="container is-max-desktop">
        <br />

        <h1 class="title has-text-centered">
            README code section
        </div>

        <br />
        <br />

        <div class="columns is-mobile is-centered">
            <label class="checkbox">
              <input type="checkbox" id="needs-image" checked>
              Show cover image
            </label>
        </div>
        <div class="columns is-mobile is-centered">
            <label class="checkbox">
              <input type="checkbox" id="bars-when-not-listening">
              Display bars when not listening
            </label>
        </div>

        <div class="columns is-mobile is-centered">
          <div class="column is-narrow">
            <p class="bd-notification is-primary">
              <label>Card theme</label>
              <div class="select is-primary">
                  <select id="theme-select">
                    <option>plain</option>
                    <option>wavy</option>
                  </select>
                </div>
            </p>
          </div>

          <br />

          <div class="column is-narrow">
            <p class="bd-notification is-primary">
              <label>EQ Bar theme</label>
              <div class="select is-primary">
                  <select id="eq-bar-theme-select">
                    <option>none</option>
                    <option>plain</option>
                  </select>
                </div>
            </p>
          </div>
        </div>

        <br />

        <div class="columns is-mobile is-centered">
            <label class="checkbox">
              <input type="checkbox" id="hide-status">
              Hide status
            </label>
        </div>

        <div class="columns is-mobile is-centered">
            <label class="checkbox">
              <input type="checkbox" id="link-to-profile">
              Combine with a link to your profile
            </label>
        </div>

        <div class="columns is-mobile is-centered">
          <div class="column is-narrow">
            <p class="bd-notification is-primary">
              <textarea class="textarea is-primary" id="readme" readonly></textarea>
            </p>
          </div>

          <div class="column is-narrow">
            <p class="bd-notification is-primary">
              <label>Enter the Background color</label>
              <input class="input is-info" id="bg-color" type="text" placeholder="Leave empty for default color.">
            </p>

            <br />

            <p class="bd-notification is-primary">
              <label>Enter the Title color</label>
              <input class="input is-info" id="title-color" type="text" placeholder="Leave empty for default color.">
            </p>

            <br />

            <p class="bd-notification is-primary">
              <label>Enter the Text color</label>
              <input class="input is-info" id="text-color" type="text" placeholder="Leave empty for default color.">
            </p>
          </div>
        </div>

        <br />

        <h2 class="title has-text-centered">
            Embed Preview
        </h2>

        <br />

        <div class="columns is-mobile is-centered">
          <div class="column is-narrow">
            <p class="bd-notification is-primary">
                <img id="preview-img" />
            </p>
          </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <script>
        let user_id = "{{ id }}";
        let code = $("#readme");
        let preview_section = $("#preview");
        let link_to_profile = false;

        let parameters = {
            id: user_id,
            theme: "plain",
            image: true,
            eq_bar_theme: "plain",
            bars_when_not_listening: false,
            bg_color: "",
            title_color: "",
            text_color: "",
            hide_status: false
        };

        const change_url = () => {
            let base_url = "{{ base_url }}/spotify?";
            let url = base_url + $.param(parameters, true);

            $("#preview-img").attr("src", url)
            code.text(
                link_to_profile ? `[![Spotify playing](${url})](https://open.spotify.com/user/${user_id})` : `![Spotify playing](${url})`
            );
        }

        change_url();
        $('#theme-select').change(function() {
            parameters.theme = this.value; change_url();
        });
        $('#eq-bar-theme-select').change(function() {
            parameters.eq_bar_theme = this.value; change_url();
        });
        $('#needs-image').change(function() {
            parameters.image = this.checked; change_url();
        });
        $('#bars-when-not-listening').change(function() {
            parameters.bars_when_not_listening = this.checked; change_url();
        });
        $('#hide-status').change(function() {
            parameters.hide_status = this.checked; change_url();
        });
        $('#link-to-profile').change(function() {
            link_to_profile = this.checked; change_url();
        });
        $('#title-color').keyup(function() {
            parameters.title_color = $(this).val(); change_url();
        });
        $('#text-color').keyup(function() {
            parameters.text_color = $(this).val(); change_url();
        });
        $('#bg-color').keyup(function() {
            parameters.bg_color = $(this).val(); change_url();
        });
    </script>

  </body>
</html>
