<svg width="{{ width }}" height="{{ height }}" viewBox="0 0 {{ width }} {{ height }}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="{{ width }}" height="{{ height }}">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <defs>
                <style type="text/css">
                    <![CDATA[
                        @font-face {
                            font-family: 'Poppins';
                            font-style: normal;
                            font-weight: 400;
                            src: url(https://fonts.gstatic.com/s/poppins/v15/pxiEyp8kv8JHgFVrJJfecg.woff2) format('woff2');
                            unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
                        }
                    ]]>
                </style>
            </defs>

            <style type="text/css">
                .main {
                    color: {{ text_color | safe }};
                    margin-top: 40px;
                    display: flex;
                }

                .currentStatus {
                    color: {{ title_color | safe }};
                    float: left;
                    font-size: 20px;
                    position: static;
                    margin-top: -2px;
                    margin-left: 10px;
                }

                .container {
                    border-radius: 5px;
                    padding: 10px 10px 10px 0px;
                }
                .art {
                    width: 27%;
                    float: left;
                    margin-left: -5px;
                }
                .content {
                    width: 71%;
                }
                .song {
                    overflow:hidden;
                    margin-top: 4px;
                    font-size: 20px;
                    text-align: center;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    margin-left: 2px;
                }

                .artist {
                    font-size: 20px;
                    margin-top: 4px;
                    text-align: center;
                    margin-bottom: 5px;
                    margin-left: 2px;
                }
                .cover {
                    width: 100px;
                    height: 100px;
                    border-radius: 5px;
                }
                #bars {
                    width: 40px;
                    height: 30px;
                    bottom: 23px;
                    position: absolute;
                    display: flex;
                    align-items: flex-end;
                }

                .bar {
                    width: 3px;
                    bottom: 1px;
                    height: 3px;
                    position: absolute;
                    background: #1DB954;
                    animation: sound 0ms -800ms linear infinite alternate;
                }

                div {
                    font-family: 'Poppins', -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
                    background-color: {{ bg_color | safe }};
                }

                @keyframes sound {
                    0% {
                        height: 3px;
                        opacity: .35;
                    }
                    100% {
                        height: 15px;
                        opacity: 0.95;
                    }
                }

                @keyframes marquee {
                    0% {
                      transform: translateX(100%);
                    }
                    100% {
                      transform: translateX(-100%);
                    }
                  }

                .explicit-music {
                    background-color: {{ text_color | safe }};
                    color: {{ bg_color | safe }};
                    font-size: 10px;
                    border-radius: 5px;
                    vertical-align: baseline;
                    padding: 1px 3px 1px 3px;
                    margin-top: 0;
                    margin-left: 3px;
                  }

                 .scrolling {
                    animation: marquee 10s linear infinite;
                    display: inline-block;
                    padding-right: 20px;
                  }

                 .song-container {
                    overflow: hidden;
                    white-space: nowrap;
                  }

                {{ css_bar|safe }}
            </style>
            {% if not hide_status %}
                <div class="currentStatus">{{status}}</div>
            {% endif %}

            <div class="main">
                {% if needs_cover_image %}
                    <a class="art">
                        <center>
                            <img src="data:image/png;base64, {{img}}" class="cover" />
                        </center>
                    </a>
                {% endif %}

                <div class="content">
                    <div class="song-container">
                    {% if show_animation %}
                        <div class="song scrolling">
                            {{song_name}}
                        </div>
                    {% else %}
                        <div class="song">
                            {{song_name}}
                        </div>
                    {% endif %}
                    </div>
                    <div class="artist">
                        {% if explicit %}
                            <span class="explicit-music">E</span>
                        {% endif %}
                        {{artist_name}}
                    </div>
                    <div id="bars">{{ content_bar | safe }}</div>
                </div>
            </div>
        </div>
    </foreignObject>
</svg>