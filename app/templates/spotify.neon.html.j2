<svg
  width="{{ width }}"
  height="{{ height }}"
  viewBox="0 0 {{ width }} {{ height }}"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  aria-labelledby="cardTitle"
  role="img"
>
  <title id="cardTitle">Now playing on Spotify</title>
  <foreignObject width="{{ width }}" height="{{ height }}">
    <defs>
      <style type="text/css">
        <![CDATA[
            @import url('https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700&display=swap');
        ]]>
      </style>
    </defs>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .container {
        font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: {{ bg_color }};
        width: 100%;
        height: 100%;
        border-radius: 14px;
        padding: 18px 20px;
        display: flex;
        flex-direction: column;
        gap: 12px;
        position: relative;
        border: 2px solid {{ accent_color }};
        box-shadow:
          0 8px 32px rgba(0, 0, 0, 0.12),
          0 0 0 1px {{ accent_color }}20,
          0 0 20px {{ accent_color }}30,
          0 0 40px {{ accent_color }}15;
      }

      .status-text {
        color: {{ accent_color }};
        font-size: 10px;
        font-weight: 600;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        opacity: 0.9;
        text-shadow: 0 0 12px {{ accent_color }}60;
      }

      .content-wrapper {
        display: flex;
        align-items: center;
        gap: 16px;
        flex: 1;
      }

      .cover-wrapper {
        flex-shrink: 0;
        position: relative;
      }

      .cover-wrapper::before {
        content: '';
        position: absolute;
        inset: -3px;
        background: {{ accent_color }};
        border-radius: 12px;
        opacity: 0.4;
        filter: blur(10px);
        z-index: -1;
      }

      .cover-image {
        width: 86px;
        height: 86px;
        border-radius: 10px;
        object-fit: cover;
        display: block;
        border: 2px solid {{ accent_color }};
        box-shadow:
          0 4px 16px rgba(0, 0, 0, 0.15),
          0 0 16px {{ accent_color }}40;
      }

      .text-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 6px;
        min-width: 0;
      }

      .song-title {
        font-size: 16px;
        font-weight: 700;
        color: {{ text_color }};
        line-height: 1.3;
        display: flex;
        align-items: center;
        gap: 7px;
        min-width: 0;
        letter-spacing: -0.2px;
      }

      .song-title-text {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        flex: 1;
        min-width: 0;
      }

      .artist-name {
        font-size: 13px;
        font-weight: 500;
        color: {{ status_color }};
        line-height: 1.4;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        letter-spacing: -0.1px;
      }

      .explicit-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: {{ accent_color }};
        color: {{ bg_color }};
        font-size: 9px;
        font-weight: 700;
        border-radius: 4px;
        padding: 3px 6px;
        line-height: 1;
        letter-spacing: 0.3px;
        box-shadow: 0 0 10px {{ accent_color }}80;
      }

      .audio-visualizer {
        display: flex;
        align-items: flex-end;
        gap: 3px;
        height: 22px;
        margin-top: 6px;
      }

      .bar {
        background: {{ accent_color }};
        width: 3px;
        border-radius: 2px;
        height: 4px;
        animation: sound 0ms -800ms linear infinite alternate;
        box-shadow: 0 0 6px {{ accent_color }}90;
      }

      @keyframes sound {
        0% {
          opacity: 0.4;
          height: 4px;
        }
        100% {
          opacity: 1;
          height: 18px;
        }
      }

      {{css_bar|safe}}

      .no-cover .text-content {
        padding-left: 0;
      }
    </style>

    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <div class="status-text">{{status}}</div>

      {% if is_now_playing %}
      <div class="content-wrapper {% if not needs_cover_image %}no-cover{% endif %}">
        {% if needs_cover_image and img %}
        <div class="cover-wrapper">
          <img
            src="data:image/png;base64, {{img}}"
            alt="Album cover"
            class="cover-image"
          />
        </div>
        {% endif %}

        <div class="text-content">
          <div class="song-title">
            {% if explicit %}
            <span class="explicit-badge">E</span>
            {% endif %}
            <span class="song-title-text">{{song_name|safe}}</span>
          </div>
          <div class="artist-name">{{artist_name|safe}}</div>
          {% if content_bar %}
          <div class="audio-visualizer">{{content_bar|safe}}</div>
          {% endif %}
        </div>
      </div>
      {% else %}
      <div class="content-wrapper {% if not needs_cover_image %}no-cover{% endif %}">
        {% if needs_cover_image and img %}
        <div class="cover-wrapper">
          <img
            src="data:image/png;base64, {{img}}"
            alt="Album cover"
            class="cover-image"
          />
        </div>
        {% endif %}

        <div class="text-content">
          <div class="song-title">
            {% if explicit %}
            <span class="explicit-badge">E</span>
            {% endif %}
            <span class="song-title-text">{{song_name|safe}}</span>
          </div>
          <div class="artist-name">{{artist_name|safe}}</div>
        </div>
      </div>
      {% endif %}
    </div>
  </foreignObject>
</svg>
